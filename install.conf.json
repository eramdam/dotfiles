[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "clean": [
      "~"
    ]
  },
  {
    "link": {
      "~/.dotfiles": "",
      "~/.mackup.cfg": "files/mackup.cfg",
      "~/.gitconfig": "files/gitconfig",
      "~/.gitignore": "files/gitignore",
      "~/.config/fish/config.fish": {
        "create": true,
        "path": "files/config/fish/config.fish"
      },
      "~/.config/starship.toml": "files/config/starship.toml"
    }
  },
  {
    "create": [
      "~/.zshrc"
    ]
  },
  {
    "shell": [
      {
        "command": "./scripts/hello.sh",
        "stdout": true,
        "description": ""
      },
      [
        "git submodule update --init --recursive",
        "Installing submodules"
      ],
      {
        "command": "/bin/bash -c \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)\"",
        "description": "Installing Homebrew",
        "quiet": false,
        "stdout": true
      },
      {
        "command": "brew bundle --file=scripts/Brewfile -v",
        "description": "Installing Homebrew packages",
        "quiet": false,
        "stdout": true
      },
      {
        "command": "scripts/nvm.sh",
        "description": "Installing nvm and installing Node",
        "quiet": false,
        "stdout": true
      },
      {
        "command": "curl -L https://get.oh-my.fish > /tmp/omf-install; fish /tmp/omf-install --noninteractive",
        "description": "Install oh my fish"
      },
      [ "echo `which fish` | sudo tee -a /etc/shells", "Add fish to default shells"],
      [ "chsh -s `which fish`", "Set fish as default shell"]
    ]
  }
]